package menu.makanan;

import java.util.Scanner;

/**
 *
 * @author user
 */
public class MenuMakanan {
    public static void main(String[] args) {
       Scanner in = new Scanner (System.in);
       int pil, hm = 0, km;
        System.out.println("1. Bakso");
        System.out.println("2. Mie ayam");
        System.out.println("3. Rawon");
        System.out.println("4. Nasi pecel");
        System.out.println("5. Kupang");
        System.out.println("pilih Menu = ");
        pil= in.nextInt();
        
        switch (pil){
            case 1 : hm = 10000 ; System.out.println("Total = Rp "+hm)  ;break;
            case 2 : hm = 8000 ; System.out.println("Total = Rp "+hm)  ;break;
            case 3 : hm = 12000 ; System.out.println("Total = Rp "+hm)  ;break;
            case 4 : hm = 7000 ; System.out.println("Total = Rp "+hm)  ;break;
            case 5 : hm = 13000 ; System.out.println("Total = Rp "+hm)  ;break;
            default   : System.out.println("pilihan salah");}
            System.out.println("Bayar = Rp ");
             int uang = in.nextInt();
             if(uang>hm) {
             km = uang-hm;
                 System.out.println("Kembalian = "+km);
                         
            }else{
             System.out.println("Maaf Uang Anda Tidak cukup");
             }
    }
        
    
            
